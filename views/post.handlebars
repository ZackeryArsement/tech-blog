<div class="row">
  <div class="col-auto" id="comment-list">
    {{#if comments.length}}
      {{!-- <h1>{{post.title}}</h1> --}}
        <div class="col-md-8">
          <h1>{{post.title}}</h1>
          <h4>{{post.text}}</h4>
          <h6>Posted by {{post.user.name}} on {{post.date_created}}</h6>
          <h6>{{post.comment}}</h6>
        </div>

      {{#each comments as |comment|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4>{{comment.text}}</h4>
            <h6>-{{comment.user.name}}, {{comment.date_created}}</h6>
            <h6>{{commet.text}}</h6>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h3>There are no comments for this post!</h3>
    {{/if}}

    <form class="form post-form">
      <div class="form-group">
        <label for="text">Comment</label>
        <input class="form-input" type="text" id="text"/>
      </div>
      <div class="form-group">
        <button class="btn btn-sm" data-id="{{post.id}}">+Add Comment</button>
      </div>
      <h1 id="user_id">{{id}}</h1>
    </form>
  </div>
</div>

<script src="/js/post.js"></script>

