<div class="row">
  <div class="col-auto" id="comment-list">
    <div class="row mb-5">
      <div class="col-md-12 bg-white round">

        {{!-- Header of a post --}}
        <div class="row mb-2 title round-top">
          <div class="col-md-8 title round-top">
            <h1 class="title">{{post.title}}</h1>
          </div>
          <div class="col-md-4 title round-top">
            <h6 class="title">Posted by {{post.user.name}} on {{post.date_created}}</h6>
          </div>
        </div>

        {{!-- Content of a post --}}
        <h4 class="bg-white text-dark p-3">{{post.text}}</h4>
      </div>
    </div>
    {{#if comments.length}}
      {{#each comments as |comment|}}
        <div class="row mb-3">
          <div class="col-md-12 bg-white round">

            {{!-- Header of a post --}}
            <div class="row mb-2 title round-top">
              <div class="col-md-8 title round-top">
                <br/>
              </div>
            </div>

            {{!-- Content of a post --}}
            <div class="bg-white" >
              <h4 class="bg-white text-dark mb-3">{{comment.text}}</h4>
              <h6 class="bg-white text-dark">-{{comment.user.name}}, {{comment.date_created}}</h6>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h3>There are no comments for this post!</h3>
    {{/if}}

    <form class="form post-form">
      <div class="form-group">
        <label for="text">Comment</label>
        <input class="form-input" type="text" id="text"/>
      </div>
      <div class="form-group">
        <button class="btn btn-sm" data-id="{{post.id}}">+Add Comment</button>
      </div>
      <h1 id="user_id">{{id}}</h1>
    </form>
  </div>
</div>

<script src="/js/post.js"></script>