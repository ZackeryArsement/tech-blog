<div class="row">
  <div class="col-auto" id="post-list">
    {{#if posts.length}}
      <h1 class="text-center mb-5">Your Post</h1>
      {{#each posts as |post|}}
        <div class="row mb-2" id="post-list">
          <div class="col-md-10 bg-white round">

            {{!-- Header of a post --}}
            <div class="row mb-2 title round-top">
              <div class="col-md-8 title round-top">
                <h1 class="title">{{post.title}}</h1>
              </div>
              <div class="col-md-4 title round-top">
                <h6 class="title">Posted by {{post.user.name}} on {{post.date_created}}</h6>
              </div>
            </div>

            {{!-- Content of a post --}}
            <h4 class="bg-white text-dark p-3">{{post.text}}</h4>
          </div>

          <div class="col-md-2">
            <button class="btn btn-sm" data-id="{{post.id}}">Delete Post</button>
            <a class="btn btn-sm mt-2" href="/api/post/{{post.id}}">View Comments</a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h3>You have no post!</h3>
    {{/if}}

    <a class="btn" type="submit" href="/new">+ Add Post</a>
  </div>
</div>

<script src="./js/dashboard.js"></script>

