<div class="row">
  <div class="col-auto" id="post-list">
    {{#if posts.length}}
      <h3>Your Post</h3>
      {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h1>{{post.title}}</h1>
            <h4>{{post.text}}</h4>
            <h6>You posted this on {{post.date_created}}</h6>
            <h6>{{post.comment}}</h6>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm" data-id="{{post.id}}">Delete Post</button>
          </div>
        </div>
      {{/each}}
    {{else}}
      <h3>You have no post!</h3>
    {{/if}}

    <a class="btn" type="submit" href="/new">+ Add Post</a>
  </div>
</div>

<script src="./js/dashboard.js"></script>
